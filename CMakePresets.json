{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "description": "Default build using Ninja Multi-Config generator",
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/build"
    },
    {
      "name": "msvc-base",
      "hidden": true,
      "inherits": "default",
      "description": "Options specific for MSVC",
      "cacheVariables": {
        "CMAKE_C_FLAGS_INIT": "-D_ITERATOR_DEBUG_LEVEL=0 /MP",
        "CMAKE_CXX_FLAGS_INIT": "-D_ITERATOR_DEBUG_LEVEL=0 /MP"
      }
    },
    {
      "name": "vs2022",
      "inherits": "msvc-base",
      "description": "Visual Studio 2022 project",
      "generator": "Visual Studio 17 2022"
    },
    {
      "name": "vs2019",
      "inherits": "msvc-base",
      "description": "Visual Studio 2019 project",
      "generator": "Visual Studio 16 2019"
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "default",
      "configuration": "Debug"
    },
    {
      "name": "release",
      "configurePreset": "default",
      "configuration": "Release"
    }
  ],
  "testPresets": [
    {
      "name": "base",
      "hidden": true,
      "configurePreset": "default",
      "environment": {
        "SLANG_RUN_SPIRV_VALIDATION": "1"
      },
      "output": {
        "verbosity": "verbose",
        "maxTestNameWidth": 999
      },
      "execution": {
        "timeout": 999999999,
        "noTestsAction": "error"
      }
    },
    {
      "name": "debug",
      "inherits": "base",
      "configuration": "Debug"
    },
    {
      "name": "release",
      "inherits": "base",
      "configuration": "Release"
    }
  ],
  "packagePresets": [
    {
      "name": "base",
      "hidden": true,
      "configurePreset": "default",
      "generators": [
        "ZIP"
      ],
      "variables": {
        "CPACK_PACKAGE_FILE_NAME": "slang"
      }
    },
    {
      "name": "release",
      "inherits": "base",
      "configurations": [
        "Release"
      ],
      "packageDirectory": "dist-release"
    },
    {
      "name": "debug",
      "inherits": "base",
      "configurations": [
        "Debug"
      ],
      "packageDirectory": "dist-debug"
    }
  ],
  "workflowPresets": [
    {
      "name": "debug-dist",
      "steps": [
        {
          "type": "configure",
          "name": "default"
        },
        {
          "type": "build",
          "name": "debug"
        },
        {
          "type": "package",
          "name": "debug"
        }
      ]
    },
    {
      "name": "release-dist",
      "steps": [
        {
          "type": "configure",
          "name": "default"
        },
        {
          "type": "build",
          "name": "release"
        },
        {
          "type": "package",
          "name": "release"
        }
      ]
    }
  ]
}

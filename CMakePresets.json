{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "description": "Default build using Ninja Multi-Config generator",
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/build"
    },
    {
      "name": "msvc-base",
      "hidden": true,
      "inherits": "default",
      "description": "Options specific for MSVC",
      "cacheVariables": {
        "CMAKE_C_FLAGS_INIT": "-D_ITERATOR_DEBUG_LEVEL=0 /MP",
        "CMAKE_CXX_FLAGS_INIT": "-D_ITERATOR_DEBUG_LEVEL=0 /MP"
      }
    },
    {
      "name": "vs2022",
      "inherits": "msvc-base",
      "description": "Visual Studio 2022 project",
      "generator": "Visual Studio 17 2022"
    },
    {
      "name": "vs2019",
      "inherits": "msvc-base",
      "description": "Visual Studio 2019 project",
      "generator": "Visual Studio 16 2019"
    },
    {
      "name": "single-component",
      "inherits": "default",
      "description": "build a single component",
      "cacheVariables": {
        "CPACK_ARCHIVE_COMPONENT_INSTALL": "ON"
      }
    },
    {
      "name": "slang-llvm",
      "inherits": "single-component",
      "description": "build slang-llvm",
      "cacheVariables": {
        "SLANG_SLANG_LLVM_FLAVOR": "USE_SYSTEM_LLVM"
      }
    },
    {
      "name": "prebuilt-slang-llvm",
      "description": "Get slang-llvm from a prior build of the slang-llvm workflow",
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "SLANG_SLANG_LLVM_FLAVOR": "FETCH_BINARY",
        "SLANG_SLANG_LLVM_BINARY_URL": "${sourceDir}/build/dist-release/slang-slang-llvm.zip",
        "CPACK_ARCHIVE_COMPONENT_INSTALL": "OFF"
      }
    },
    {
      "name": "dist",
      "inherits": "default",
      "description": "Config for CI binary dist generation, uses the system LLVM",
      "cacheVariables": {
        "SLANG_SLANG_LLVM_FLAVOR": "USE_SYSTEM_LLVM"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "default",
      "configuration": "Debug"
    },
    {
      "name": "release",
      "configurePreset": "default",
      "configuration": "Release"
    },
    {
      "name": "dist-debug",
      "configurePreset": "dist",
      "inherits": "debug"
    },
    {
      "name": "dist-release",
      "configurePreset": "dist",
      "inherits": "release"
    },
    {
      "name": "release-prebuilt-slang-llvm",
      "inherits": "release",
      "configurePreset": "prebuilt-slang-llvm"
    },
    {
      "name": "debug-prebuilt-slang-llvm",
      "inherits": "debug",
      "configurePreset": "prebuilt-slang-llvm"
    },
    {
      "name": "generators",
      "inherits": "release",
      "configurePreset": "single-component",
      "targets": [
        "all-generators"
      ]
    },
    {
      "name": "slang-llvm",
      "inherits": "release",
      "configurePreset": "slang-llvm",
      "targets": [
        "slang-llvm"
      ]
    }
  ],
  "testPresets": [
    {
      "name": "base",
      "hidden": true,
      "configurePreset": "default",
      "environment": {
        "SLANG_RUN_SPIRV_VALIDATION": "1"
      },
      "output": {
        "verbosity": "verbose",
        "maxTestNameWidth": 999
      },
      "execution": {
        "timeout": 999999999,
        "noTestsAction": "error"
      }
    },
    {
      "name": "debug",
      "inherits": "base",
      "configuration": "Debug"
    },
    {
      "name": "release",
      "inherits": "base",
      "configuration": "Release"
    }
  ],
  "packagePresets": [
    {
      "name": "base",
      "hidden": true,
      "configurePreset": "default",
      "generators": [
        "ZIP"
      ],
      "variables": {
        "CPACK_PACKAGE_FILE_NAME": "slang"
      }
    },
    {
      "name": "release",
      "inherits": "base",
      "configurations": [
        "Release"
      ],
      "packageDirectory": "dist-release"
    },
    {
      "name": "debug",
      "inherits": "base",
      "configurations": [
        "Debug"
      ],
      "packageDirectory": "dist-debug"
    },
    {
      "name": "dist-release",
      "inherits": "release",
      "configurePreset": "dist"
    },
    {
      "name": "dist-debug",
      "inherits": "debug",
      "configurePreset": "dist"
    },
    {
      "name": "release-prebuilt-slang-llvm",
      "inherits": "release",
      "configurePreset": "prebuilt-slang-llvm"
    },
    {
      "name": "debug-prebuilt-slang-llvm",
      "inherits": "debug",
      "configurePreset": "prebuilt-slang-llvm"
    },
    {
      "name": "generators",
      "inherits": "release",
      "configurePreset": "single-component",
      "variables": {
        "CPACK_COMPONENTS_ALL": "generators"
      }
    },
    {
      "name": "slang-llvm",
      "inherits": "release",
      "configurePreset": "slang-llvm",
      "variables": {
        "CPACK_COMPONENTS_ALL": "slang-llvm"
      }
    }
  ],
  "workflowPresets": [
    {
      "name": "dist-debug",
      "steps": [
        {
          "type": "configure",
          "name": "dist"
        },
        {
          "type": "build",
          "name": "dist-debug"
        },
        {
          "type": "package",
          "name": "dist-debug"
        }
      ]
    },
    {
      "name": "dist-debug-prebuilt-slang-llvm",
      "steps": [
        {
          "type": "configure",
          "name": "prebuilt-slang-llvm"
        },
        {
          "type": "build",
          "name": "debug-prebuilt-slang-llvm"
        },
        {
          "type": "package",
          "name": "debug-prebuilt-slang-llvm"
        }
      ]
    },
    {
      "name": "dist-release",
      "steps": [
        {
          "type": "configure",
          "name": "dist"
        },
        {
          "type": "build",
          "name": "dist-release"
        },
        {
          "type": "package",
          "name": "dist-release"
        }
      ]
    },
    {
      "name": "dist-release-prebuilt-slang-llvm",
      "steps": [
        {
          "type": "configure",
          "name": "prebuilt-slang-llvm"
        },
        {
          "type": "build",
          "name": "release-prebuilt-slang-llvm"
        },
        {
          "type": "package",
          "name": "release-prebuilt-slang-llvm"
        }
      ]
    },
    {
      "name": "generators",
      "steps": [
        {
          "type": "configure",
          "name": "single-component"
        },
        {
          "type": "build",
          "name": "generators"
        },
        {
          "type": "package",
          "name": "generators"
        }
      ]
    },
    {
      "name": "slang-llvm",
      "steps": [
        {
          "type": "configure",
          "name": "slang-llvm"
        },
        {
          "type": "build",
          "name": "slang-llvm"
        },
        {
          "type": "package",
          "name": "slang-llvm"
        }
      ]
    }
  ]
}
